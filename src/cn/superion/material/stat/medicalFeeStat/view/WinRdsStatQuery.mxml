			   width="500"
			   height="264"
			   title="库存物资月报表"
			   close="closeWin()"
			   xmlns:controls="cn.superion.base.components.controls.*"
			   creationComplete="doInit()">

	<fx:Script source="WinRdsStatQueryas.as"/>

	<fx:Declarations>
