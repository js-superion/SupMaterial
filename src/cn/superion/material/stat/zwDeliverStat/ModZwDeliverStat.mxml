<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   layout="vertical"
		   height="100%"
		   width="100%"
		   horizontalScrollPolicy="auto"
		   backgroundColor="#E2E8E8"
		   xmlns:controls="cn.superion.base.components.controls.*"
		   creationComplete="doInit()"
		   xmlns:view="cn.superion.material.util.*">
	
	<fx:Script source="ModZwDeliverStatas.as"/>

	<s:Scroller id="scrol"
				width="100%"
				height="100%">
		<s:VGroup id="vg"
				  gap="0"
				  height="100%"
				  width="100%">
			<view:ToolBar id="toolBar"
						  width="100%"
						  printClick="printClickHandler(event)"
						  expClick="expClickHandler(event)"
						  queryClick="queryClickHandler(event)"
						  exitClick="exitClickHandler(event)"/>
			
			<controls:BarSubTitle title="出库部门汇总（总务）"/> 

			<controls:SuperDataGrid id="gdDeliver"
									hasRowNo="true"
									width="100%"
									height="100%"
									horizontalScrollPolicy="on"
									sumLableField="rowno"
									sumRowLabelText="合计"
									isAutoFetchDictData="false"
									styleName="dataGrid"
									format="{[,,'0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000','0.0000']}">
				<controls:columns>
					<mx:DataGridColumn headerText="序号"
									   dataField="rowno"
									   width="50"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="编码"
									   dataField="remark"
									   width="100"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="科室"
									   dataField="deptName"
									   width="200"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="总费用"
									   dataField="sum"
									   width="120"
									   textAlign="left"/>
				</controls:columns>
			</controls:SuperDataGrid>
		</s:VGroup>
	</s:Scroller>
</mx:Module>

