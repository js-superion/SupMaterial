<?xml version="1.0" encoding="utf-8"?>
<mx:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		   xmlns:s="library://ns.adobe.com/flex/spark"
		   xmlns:mx="library://ns.adobe.com/flex/mx"
		   layout="vertical"
		   height="100%"
		   width="100%"
		   horizontalScrollPolicy="auto"
		   backgroundColor="#E2E8E8"
		   xmlns:controls="cn.superion.base.components.controls.*"
		   creationComplete="doInit()"
		   xmlns:view="cn.superion.material.util.*">
	<fx:Script>
		<![CDATA[
			import cn.superion.material.deliver.deliverOther.view.NumbericEditor1;
//			import cn.superion.material.receive.receive.view.NumbericEditor2;
//			import cn.superion.material.receive.receive.view.NumbericEditor3;
		]]>
	</fx:Script>
	<fx:Script source="ModDeliverOtheras.as"/>

	<fx:Declarations>
		<s:RadioButtonGroup id="redOrBlue"
							change="redOrBlue_changeHandler(event)"
							/>
		<!--验证 -->
		<mx:NumberValidator source="{amount}"
							property="text"
							integerError="必须为整数"
							maxValue="1000"
							domain="int"
							decimalPointCountError="非法小数点个数"
							trigger="{amount}"
							triggerEvent="focusOut"/>
	</fx:Declarations>
	<s:Scroller id="scrol"
				width="100%"
				height="100%">

		<s:VGroup id="vg"
				  gap="0"
				  height="100%"
				  width="100%">
			<view:ToolBar id="toolBar"
						  width="100%"
						  printClick="printClickHandler(event)"
						  expClick="expClickHandler(event)"
						  addClick="addClickHandler(event)"
						  modifyClick="modifyClickHandler(event)"
						  deleteClick="deleteClickHandler(event)"
						  saveClick="saveClickHandler(event)"
						  cancelClick="cancelClickHandler(event)"
						  verifyClick="verifyClickHandler(event)"
						  addRowClick="addRowClickHandler(event)"
						  delRowClick="delRowClickHandler(event)"
						  queryClick="queryClickHandler(event)"
						  firstPageClick="firstPageClickHandler(event)"
						  prePageClick="prePageClickHandler(event)"
						  nextPageClick="nextPageClickHandler(event)"
						  lastPageClick="lastPageClickHandler(event)"
						  exitClick="exitClickHandler(event)"
						  abandonClick="toolBar_abandonClickHandler(event)"/>
			<controls:BarSubTitle title="其它出库处理"/>
			<s:HGroup id="hgTop"
					  gap="2"
					  width="100%">
				<s:BorderContainer id="bord"
								   width="100%"
								   height="111"
								   backgroundColor="#E2E8E8"
								   borderVisible="false">
					<s:layout>
						<s:VerticalLayout verticalAlign="top"
										  paddingLeft="5"/>
					</s:layout>
					<s:HGroup id="masterGroup"
							  width="100%"
							  height="60">
						<mx:Canvas width="50"
								   height="100%"
								   backgroundColor="#E2E8E8">
							<s:RadioButton id="blueType"
										   x="0"
										   y="5"
										   label="蓝字"
										   color="blue"
										   groupName="redOrBlue"
										   selected="true"/>
							<s:RadioButton id="redType"
										   x="0"
										   y="36"
										   groupName="redOrBlue"
										   label="红字"
										   color="red"/>
						</mx:Canvas>
						<mx:VRule height="100%"/>
						<s:VGroup width="100%"
								  height="100%"
								  paddingTop="5"
								  paddingBottom="5"
								  paddingRight="5">
							<s:HGroup id="hg1"
									  width="100%"
									  verticalAlign="middle">
								<s:Label text="仓　  库"
										 color="#0000FF"/>
								<s:DropDownList id="storageCode"
												labelField="storageName"
												width="17%"
												height="25"
												keyDown="toNextCtrl(event,deptCode)"/>
								<s:Label text="请领部门"
										 color="#0000FF"/>
								<controls:TextInputIcon id="deptCode"
														width="26%"
														
														queryIconClick="deptCode_queryIconClickHandler(event)"
														keyDown="toNextCtrl(event,personId)"/>
								<s:Label text="请 领 人"/>
								<controls:TextInputIcon id="personId"
														width="14%"
														queryIconClick="personId_queryIconClickHandler(event)"
														keyDown="toNextCtrl(event,materialCode)"/>
								<s:Label text="出库日期"
										 color="#0000FF"/>
								<mx:DateField id="billDate"
											  width="14%"
											  fontSize="14"
											  formatString="YYYY-MM-DD"
											  showToday="true"
											  selectableRange="{{rangeEnd:new Date()}}"
											  enterFrame="{billDate.selectedDate==null?billDate.selectedDate=new Date():billDate.selectedDate}"
											  keyDown="toNextCtrl(event,operationNo)"/>

								<s:Label id="labOpertaionNo"
										 text="业 务 号"/>
								<s:TextInput id="operationNo"
											 width="14%"
											 restrict="0-9"
											 keyDown="toNextCtrl(event,rdType)"/>
							</s:HGroup>

							<s:HGroup id="hg2"
									  width="100%"
									  verticalAlign="middle">
								<s:Label text="出库类别"
										 color="#0000FF"/>
								<controls:TextInputIcon id="rdType"
														maxChars="30"
														queryIconClick="rdType_queryIconClickHandler(event)"
														keyDown="toNextCtrl(event,billNo)"/>
								<s:Label text="出库单号"/>
								<s:TextInput id="billNo"
											 restrict="0-9"
											 keyDown="toNextCtrl(event,billMonthNo)"/>
								<s:Label text="月出库单号"/>
								<s:TextInput id="billMonthNo"
											 width="40%"
											 keyDown="toNextCtrl(event,remark)"/>
								<s:Label text="备　　注"/>
								<s:TextInput id="remark"
											 width="100%"
											 keyDown="toNextCtrl(event,materialCode)"/>
							</s:HGroup>
						</s:VGroup>
					</s:HGroup>

					<s:VGroup id="hiddenVGroup"
							  width="100%"
							  paddingTop="5"
							  paddingBottom="5"
							  paddingRight="5">
						<mx:HRule id="hrule1"
								  width="100%"
								  height="1"/>
						<s:HGroup id="detailGroup"
								  width="100%"
								  verticalAlign="middle">
							<s:Label text="物资编码"
									 color="#0000FF"/>
							<controls:TextInputIcon id="materialCode"
													width="17%"
													keyDown="toNextCtrl(event,amount)"
													queryIconClick="materialCode_queryIconClickHandler(event)"/>
							<s:Label text="物资名称"/>
							<s:TextInput id="materialName"
										 width="33%"
										 enabled="false"/>
							<s:Label text="规格型号"/>
							<s:TextInput id="materialSpec"
										 width="24%"
										 enabled="false"/>
							<s:Label text="单位"/>
							<s:TextInput id="materialUnits"
										 width="7%"
										 enabled="false"/>
							<s:Label text="批号" visible="{_bathSign}" includeInLayout="{_bathSign}"
									 color="#0000FF"/>
							<controls:TextInputIcon id="batch" visible="{_bathSign}" includeInLayout="{_bathSign}"
													width="14%"
													textChange="batch_changeHandler(event)"
													keyDown="toNextCtrl(event,materialCode)"
													queryIconClick="batch_queryIconClickHandler(event)"/>
							<s:Label text="数量"
									 color="#0000FF"/>
							<s:TextInput id="amount"
										 width="10%"
										 restrict="0-9.\-"
										 focusOut="amount_focusOutHandler(event)"
										 focusIn="amount.selectAll();amount_ChangeHandler(event)"
										 change="amount_ChangeHandler(event)"
										 keyDown="toNextCtrl(event,materialCode)"/>
						</s:HGroup>
						<s:HGroup id="detailGroup2"
								  width="100%"
								  verticalAlign="middle">
							<s:Label text="备　　注"/>
							<s:TextInput id="detailRemark"
										 width="100%"
										 keyDown="toNextCtrl(event,materialCode)"
										 change="detailRemark_changeHandler(event)"/>
						</s:HGroup>
						<mx:HRule id="hrule2"
								  width="100%"
								  height="1"/>
					</s:VGroup>
				</s:BorderContainer>
			</s:HGroup>

			<controls:SuperDataGrid id="gdRdsDetail"
									width="100%"
									height="100%"
									top="5"
									hasRowNo="true"
									sumField="{['amount','retailMoney','wholeSaleMoney']}"
									itemEditBegin="gdRdsDetail_itemEditBeginHandler(event)"
									sumLableField="rowno"
									sumRowLabelText="合计"
									styleName="dataGrid"
									horizontalScrollPolicy="on"
									format="{[,,,,,,'0.0000','0.0000','0.0000','0.0000','0.0000']}"
									itemClick="gdRdsDetail_itemClickHandler(event)">
				<controls:columns>
					<mx:DataGridColumn headerText="序号"
									   width="40"
									   dataField="rowno"/>
					<mx:DataGridColumn headerText="物资编码"
									   width="90"
									   dataField="materialCode"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="物资名称"
									   width="220"
									   dataField="materialName"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="规格型号"
									   width="150"
									   dataField="materialSpec"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="品名规格"
									   width="0"
									   visible="false"
									   labelFunction="nameSpecLBF"
									   dataField="nameSpec"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="单位"
									   width="60"
									   dataField="materialUnits"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="数量"
									   width="80"
									   itemEditor="{new ClassFactory(NumbericEditor1)}"
									   editable="true"
									   dataField="amount"
									   textAlign="right"
									   color="#0000FF"/>
					<mx:DataGridColumn headerText="批发价"
									   width="90"
									   dataField="wholeSalePrice"
									   textAlign="right"/>
					<mx:DataGridColumn headerText="批发金额"
									   width="100"
									   dataField="wholeSaleMoney"
									   textAlign="right"/>
					<mx:DataGridColumn headerText="售价"
									   width="90"
									   dataField="retailPrice"
									   textAlign="right"/>
					<mx:DataGridColumn headerText="售价金额"
									   width="100"
									   dataField="retailMoney"
									   textAlign="right"/>
					<mx:DataGridColumn headerText="批号"
									   width="100"
									   dataField="batchName"
									   textAlign="left"
									   labelFunction="batchLBF"
									   color="#0000FF"/>
					<mx:DataGridColumn headerText="中标号"
									   width="100"
									   editable="false"
									   dataField="inviteNo"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="有效期至"
									   width="100"
									   dataField="availDate"
									   textAlign="left"/>
					<mx:DataGridColumn headerText="生产厂家"
									   width="200"
									   dataField="factoryName"
									   textAlign="left"
									   labelFunction="factoryLBF"/>
					<mx:DataGridColumn headerText="备注"
									   width="100"
									   editable="false"
									   dataField="detailRemark"
									   textAlign="left"/>
				</controls:columns>
			</controls:SuperDataGrid>

			<s:HGroup paddingLeft="10"
					  height="39"
					  gap="10"
					  verticalAlign="middle">
				<mx:FormItem label="现存量"
							 indicatorGap="2">
					<s:TextInput id="currentStockAmount"
								 width="90"
								 enabled="false"
								 text=""/>
				</mx:FormItem>

				<mx:FormItem label="制单人"
							 indicatorGap="2">
					<s:TextInput id="maker"
								 width="90"
								 enabled="false"/>
				</mx:FormItem>
				<mx:FormItem label="制单日期"
							 indicatorGap="2">
					<s:TextInput id="makeDate"
								 width="110"
								 enabled="false"/>
				</mx:FormItem>

				<mx:FormItem label="审核人"
							 indicatorGap="2">
					<s:TextInput id="verifier"
								 width="90"
								 enabled="false"/>
				</mx:FormItem>
				<mx:FormItem label="审核日期"
							 indicatorGap="2">
					<s:TextInput id="verifyDate"
								 width="110"
								 enabled="false"/>
				</mx:FormItem>
			</s:HGroup>
		</s:VGroup>
	</s:Scroller>
</mx:Module>
